<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.app.baseballmessenger.NewTradeActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Trade"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/userText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select user..."
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <Button
        android:id="@+id/selectUserButton"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:background="#b3ee01"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Select user" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="27dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cards Sent (You Give)"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <ListView
        android:id="@+id/cards_sent"
        android:layout_width="match_parent"
        android:layout_height="119dp" />

    <Button
        android:id="@+id/selectCardsOne"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:background="#b3ee01"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Select Cards" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/userText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cards Received (You Get)"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <ListView
        android:id="@+id/cards_received"
        android:layout_width="match_parent"
        android:layout_height="117dp" />

    <Button
        android:id="@+id/selectCardsTwo"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:background="#b3ee01"
        android:text="Select Cards" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="19dp" />

    <Button
        android:id="@+id/proposeTradeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b3ee01"
        android:text="Propose Trade" />

</LinearLayout>