<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.app.baseballmessenger.SingleTradeActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="Cards Received (You Give)"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


    <ListView
        android:id="@+id/cards_received"
        android:layout_width="match_parent"
        android:layout_height="119dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="34dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="Cards Sent (You Get)"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/cards_sent"
        android:layout_width="match_parent"
        android:layout_height="125dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="91dp" />

    <Button
        android:id="@+id/AcceptButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#b3ee01"
        android:text="Accept Trade" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/RejectButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#b3ee01"
        android:text="Reject Trade" />

</LinearLayout>